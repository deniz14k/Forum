@model StudentsUnite_II.Models.AddDiscussionViewModel

<div class="container mt-5">
    <h1>Add Discussion</h1>

    <form method="post" onsubmit="return validateForm()">
        <div class="mb-3">
            <label for="name" class="form-label">Title</label>
            <input type="text" class="form-control" id="name" asp-for="name" required>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Tags</label>
            <input type="text" class="form-control" id="category" asp-for="category" required>
            <span asp-validation-for="category" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" asp-for="description" rows="5" required></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-secondary" asp-controller="Discussions" asp-action="ListDiscussion">Back</a>
        </div>
    </form>
</div>


<script>
    function validateForm() {
        var name = document.getElementById("name").value.trim;
        var email = document.getElementById("category").value.trim;
        var description = document.getElementById("description").value.trim;

        if (name == "" || category == "" || description == "") {
            alert("Please fill all the fields with propriate values.")
            return false;
        }
        return true;

    }

</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}