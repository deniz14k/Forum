@model StudentsUnite_II.Models.AddDiscussionViewModel

<h1>Add Thread</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="name" required></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Category</label>
        <input type="text" class="form-control" asp-for="category" required></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="description" required></input>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" asp-controller="Discussions" asp-action="ListDiscussion">Back</a>

    </div>


</form>