@{
}

@model Forum.Models.Discussion

<div class="container">
    <div class="form-container">
        <h1>Edit Discussion</h1>

        @if (Model == null)
        {
            <p>No Discussion with this id.</p>
        }
        else
        {
            <form method="post">
                <div class="form-group">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="name" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Category</label>
                    <input type="text" class="form-control" asp-for="category" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" asp-for="description" rows="15" required></textarea>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="submit" class="btn btn-danger" asp-action="DeleteDiscussion" asp-controller="Discussions">Delete</button>
                    <a class="btn btn-primary" asp-controller="Discussions" asp-action="ListDiscussion">Back</a>
                </div>
            </form>
        }
    </div>
</div>