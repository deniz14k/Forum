@{
}

@model Forum.Models.Discussion

<h1>Edit Discussion</h1>

@if (Model == null)
{
    <p>No Discussion with this id.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly></input>
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="name" required></input>
        </div>
        <div class="mt-3">
            <label class="form-label">Category</label>
            <input type="text" class="form-control" asp-for="category" required></input>
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="description" required></input>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div> 
        <div class="mt-3">
            <button type="submit" class="btn btn-danger ms-3" asp-action="DeleteDiscussion" asp-controller="Discussions">Delete</button>
        </div>
        <a class="btn btn-primary" asp-controller="Discussions" asp-action="ListDiscussion">Back</a>

    </form>
 }