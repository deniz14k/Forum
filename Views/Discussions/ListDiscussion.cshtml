@using System.Text
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
    string searchString = ViewData["CurrentFilter"] as string;
    bool myDiscussions = ViewData["MyDiscussions"] != null && (bool)ViewData["MyDiscussions"];

}

@model List<Forum.Models.Discussion> 
<h1> Discussions</h1>

<form asp-controller="Discussions" asp-action="ListDiscussion" method="get">
    <p>
        Title: <input type="text" name="SearchString" placeholder="Search" value="@searchString" />
        <input type="submit" value="Filter" />
    </p>

    <input type="checkbox" name="MyDiscussions" value="true" @(myDiscussions ? "checked" : "")>
    <label for="MyDiscussions"> My Discussions:</label><br>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>User</th>
            <th>Category</th>
            <th>Posted At</th>
            <th>Description</th>

            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var discussion in Model)
        {
            <tr>
                <th>@discussion.Id</th>
                <td>@discussion.name</td>
                <td>@discussion.user</td>
                <td>@discussion.category</td>
                <td>@discussion.dateOfCreation</td>
                <td>@discussion.description</td>
                
                <td>
                    <a class="btn btn-primary" asp-action="OpenDiscussion" asp-controller="Comments" asp-route-id="@discussion.Id">Open</a>
                    @{
                        if (discussion.user == User.Identity.Name || User.IsInRole("Admin"))
                        {
                            <a class="btn btn-primary" asp-controller="Discussions" asp-action="EditDiscussion" asp-route-id="@discussion.Id">Edit</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-controller="Discussions" asp-action="AddDiscussion">Add</a>
</div>