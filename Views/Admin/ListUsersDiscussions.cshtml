@{

}

@model List<Forum.Models.Discussion>
<h1> Discussions</h1>

<table class="table">
    <thead>
        <tr>
           
            <th>Name</th>
            <th>User</th>
            <th>Category</th>
            <th>Posted At</th>
            <th>Description</th>

            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discussion in Model)
        {
            <tr>
                
                <td>@discussion.name</td>
                <td>@discussion.user</td>
                <td>@discussion.category</td>
                <td>@discussion.dateOfCreation</td>
                <td>@discussion.description</td>
                <td>
                    <form method = "post">
                        <button type="submit" asp-controller="Admin" asp-action="DeleteDiscussion" asp-route-id="@discussion.Id">Delete</button>
                    </form>
                   
                </td>
            </tr>
        }
    </tbody>

   
</table> 
<a class="btn btn-primary" asp-controller="Admin" asp-action="ListUsers">Back</a>