@model Forum.Models.Comment

<h1>Edit Comment</h1>

@if (Model == null)
{
    <p>No Comment with this id.</p>
}
else
{
    <form method="post" asp-action="UpdateComment" asp-controller="Comments">
        <div class="mt-3">
            <label class="form-label">Edit Comment</label>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="discussionId" />
            <textarea class="form-control" asp-for="content"></textarea>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update Comment</button>
        </div>
        <a class="btn btn-secondary" asp-controller="Comments" asp-action="OpenDiscussion" asp-route-id="@Model.discussionId">Back</a>
    </form>
}
